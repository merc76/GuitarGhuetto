CC=gcc
CFLAGS=-Wall -Wextra -Wno-unused-parameter
P=-pthread
N=-lncurses

serveur: serveur.c serveur.h GuitarGhetto.h 
    $(CC) $(CFLAGS) serveur.c -o serveur -L/usr/lib/ -lpthread
 
client: client.c client.h Gdefinitions.h
    $(CC) $(CFLAGS) client.c -o client $(L) $(N)

clean:
	rm *.o
	rm serveur
	rm client